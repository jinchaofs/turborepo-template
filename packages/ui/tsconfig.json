{
	"extends": "@repo/typescript-config/react-library.json",
	"compilerOptions": {
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["src/*"],
			"@/components/ui/*": ["src/components/ui/*"],
			"@/lib/*": ["src/lib/*"],
			"@/lib/utils": ["src/lib/utils"],
			"@/hooks/*": ["src/hooks/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
